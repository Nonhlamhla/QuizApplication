<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/riddle1"
    android:nextFocusRight="@drawable/riddle1"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_marginTop="20dp"
    tools:context="com.example.admin.quizapplication.MainActivity">





    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="176dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Riddle Quiz"
                    android:textSize="60sp"
                    android:layout_marginTop="0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAllCaps="false" />

            </LinearLayout>


            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:padding="8dp"
                android:layout_marginBottom="30dp"
                android:onClick="level1"
                android:id="@+id/level1"
                android:textAllCaps="false"
                android:background="@drawable/button_style"
                style="@style/Widget.AppCompat.Button.Small"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.32"
                android:elevation="0dp"
                android:textColor="@android:color/black" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:padding="8dp"
                android:onClick="level2"
                android:layout_marginBottom="30dp"
                android:id="@+id/level2"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Small"
                android:background="@drawable/button_style"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.32"
                android:elevation="0dp"
                android:textColor="@android:color/black" />

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Hard"
                android:padding="8dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/level3"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Small"
                android:background="@drawable/button_style"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.32"
                android:elevation="0dp"
                android:textColor="@android:color/black" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Funny"
                android:padding="8dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/level4"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Small"
                android:background="@drawable/button_style"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.32"
                android:elevation="0dp"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
